<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Search Options">

        <ListPreference
            app:defaultValue="en"
            app:entries="@array/lang_entries"
            app:entryValues="@array/lang_values"
            app:key="search_lang"
            app:title="Search language"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="relevancy"
            app:entries="@array/sortBy_entries"
            app:entryValues="@array/sortBy_values"
            app:key="sort_by"
            app:title="Sort By"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Top Headlines Options">
        <ListPreference
            app:defaultValue="us"
            app:entries="@array/country_entries"
            app:entryValues="@array/country_values"
            app:key="country"
            app:title="Country"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

</PreferenceScreen>
